<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yh.store.mapper.DistrictMapper">

    <select id="findByParent" resultType="com.yh.store.pojo.District">
        SELECT code,name FROM t_dict_district
        WHERE parent = #{parent}
        ORDER BY code
    </select>

    <select id="findNameByCode" resultType="string">
        SELECT name FROM t_dict_district
        WHERE code = #{code}
    </select>
</mapper>